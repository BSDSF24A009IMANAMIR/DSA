#include <iostream>
using namespace std;

template <typename T>
class Node {
public:
    T data;
    Node<T>* next;
    Node<T>* prev;

    Node() {
        data = 0;
        next = nullptr;
        prev = nullptr;
    }

    Node(T d) {
        data = d;
        next = nullptr;
        prev = nullptr;
    }
};

template <typename T>
class DLL {
private:
    Node<T>* head;
    Node<T>* tail;

public:
    DLL() {
        head = nullptr;
        tail = nullptr;
    }

    ~DLL() {
        Node<T>* current = head;
        while (current != nullptr) {
            Node<T>* nextNode = current->next;
            delete current;
            current = nextNode;
        }
        head = nullptr;
        tail = nullptr;
    }

    void insertAtTail(T value) {
        Node<T>* newNode = new Node<T>(value);
        if (head == nullptr) {
            head = tail = newNode;
        } else {
            tail->next = newNode;
            newNode->prev = tail;
            tail = newNode;
        }
    }

    void insertAtHead(T value) {
        Node<T>* newNode = new Node<T>(value);
        if (head == nullptr) {
            head = tail = newNode;
        } else {
            newNode->next = head;
            head->prev = newNode;
            head = newNode;
        }
    }

    void remove(T value) {
        if (head == nullptr) {
            cout << "List is empty!" << endl;
            return;
        }

        Node<T>* temp = head;
        while (temp != nullptr && temp->data != value) {
            temp = temp->next;
        }

        if (temp == nullptr) {
            cout << "Value not found!" << endl;
            return;
        }

        if (temp == head)
            head = head->next;
        if (temp == tail)
            tail = tail->prev;
        if (temp->prev)
            temp->prev->next = temp->next;
        if (temp->next)
            temp->next->prev = temp->prev;

        delete temp;
        cout << "Node deleted!" << endl;
    }

    bool search(T value) {
        Node<T>* temp = head;
        while (temp != nullptr) {
            if (temp->data == value)
                return true;
            temp = temp->next;
        }
        return false;
    }

    void update(T key, T value) {
        Node<T>* temp = head;
        while (temp != nullptr) {
            if (temp->data == key) {
                temp->data = value;
                cout << "Updated " << key << " to " << value << endl;
                return;
            }
            temp = temp->next;
        }
        cout << "Key " << key << " not found in the list." << endl;
    }

    int countNodes() {
        int count = 0;
        Node<T>* temp = head;
        while (temp != nullptr) {
            count++;
            temp = temp->next;
        }
        return count;
    }

    void display() {
        Node<T>* temp = head;
        while (temp != nullptr) {
            cout << temp->data << " ";
            temp = temp->next;
        }
        cout << endl;
    }
};
