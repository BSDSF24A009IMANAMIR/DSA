#include <iostream>
#include <string>
using namespace std;

template<typename T>
class Node {
public:
    T data;
    Node<T>* next;

    Node() {
        data = 0;
        next = nullptr;
    }

    Node(T d) {
        data = d;
        next = nullptr;
    }

    Node(T d, Node* p) {
        data = d;
        next = p;
    }
};

template<typename T>
class CSLL {
protected:
    Node<T>* head;

public:
    CSLL() {
        head = nullptr;
    }

    ~CSLL() {
        if (!isEmpty()) {
            Node<T>* curr = head->next;
            while (curr != head) {
                Node<T>* temp = curr;
                curr = curr->next;
                delete temp;
            }
            delete head;
        }
        head = nullptr;
    }

    bool isEmpty() {
        return head == nullptr;
    }

    void insertAtHead(T v) {
        Node<T>* t = new Node<T>(v);
        if (isEmpty()) {
            head = t;
            head->next = head;
        } else {
            Node<T>* temp = head;
            while (temp->next != head)
                temp = temp->next;
            temp->next = t;
            t->next = head;
            head = t;
        }
    }

    void insertAtTail(T v) {
        Node<T>* t = new Node<T>(v);
        if (isEmpty()) {
            head = t;
            t->next = head;
        } else {
            Node<T>* temp = head;
            while (temp->next != head)
                temp = temp->next;
            temp->next = t;
            t->next = head;
        }
    }

    void insertAfter(T key, T v) {
    if (isEmpty()) {
        cout << "List is empty" << endl;
        return;
    }

    Node<T>* temp = head;
    while (true) {
        if (temp->data == key) {
            Node<T>* t = new Node<T>(v);
            t->next = temp->next;
            temp->next = t;
            return;
        }

        temp = temp->next;

        // We've made a full circle ? stop searching
        if (temp == head)
            break;
    }

    cout << "Key not found" << endl;
}


    void insertBefore(T key, T v) {
    if (isEmpty()) {
        cout << "List is empty" << endl;
        return;
    }

    // If the key is at the head, insert before head
    if (head->data == key) {
        insertAtHead(v);
        return;
    }

    Node<T>* prev = head;
    Node<T>* curr = head->next;

    while (true) {
        if (curr->data == key) {
            Node<T>* t = new Node<T>(v);
            t->next = curr;
            prev->next = t;
            return;
        }

        prev = curr;
        curr = curr->next;

        // if we made a full circle
        if (curr == head)
            break;
    }

    cout << "Key not found" << endl;
}


    void removeHead() {
        if (isEmpty()) {
            cout << "List is empty" << endl;
            return;
        }

        if (head->next == head) {
            delete head;
            head = nullptr;
            return;
        }

        Node<T>* temp = head;
        Node<T>* last = head;

        while (last->next != head)
            last = last->next;

        head = head->next;
        last->next = head;
        delete temp;
    }

    void removeTail() {
        if (isEmpty()) {
            cout << "List is empty" << endl;
            return;
        }

        if (head->next == head) {
            delete head;
            head = nullptr;
            return;
        }

        Node<T>* prev = nullptr;
        Node<T>* curr = head;

        while (curr->next != head) {
            prev = curr;
            curr = curr->next;
        }

        prev->next = head;
        delete curr;
    }

    void remove(T key) {
    if (isEmpty()) {
        cout << "List is empty" << endl;
        return;
    }

    // Case 1: only one node
    if (head->data == key && head->next == head) {
        delete head;
        head = nullptr;
        return;
    }

    Node<T>* curr = head;
    Node<T>* prev = nullptr;

    while (true) {
        if (curr->data == key) {
            // Case 2: deleting head
            if (prev == nullptr) {
                Node<T>* last = head;
                while (last->next != head)
                    last = last->next;

                head = head->next;
                last->next = head;
                delete curr;
            } 
            // Case 3: deleting middle or last node
            else {
                prev->next = curr->next;
                delete curr;
            }
            return;
        }

        prev = curr;
        curr = curr->next;

        if (curr == head) // full circle completed
            break;
    }

    cout << "Key not found" << endl;
}


    bool search(T key) {
    if (isEmpty()) return false;

    Node<T>* temp = head;
    while (true) {
        if (temp->data == key)
            return true;

        temp = temp->next;

        if (temp == head) // full circle completed
            break;
    }

    return false;
}


    void display() {
    if (isEmpty()) {
        cout << "List is empty" << endl;
        return;
    }

    Node<T>* temp = head;
    while (true) {
        cout << temp->data << " -> ";
        temp = temp->next;

        if (temp == head)  // stop after one full cycle
            break;
    }

    cout << "(back to head)" << endl;
}

    int countNodes() {
    if (isEmpty()) return 0;

    int count = 0;
    Node<T>* temp = head;
    while (true) {
        count++;
        temp = temp->next;

        if (temp == head)  // completed full circle
            break;
    }

    return count;
}

};

int main() {
    CSLL<int> list;
    list.insertAtHead(10);
    list.insertAtTail(20);
    list.insertAtTail(30);
    list.insertAtTail(40);
    list.insertAtTail(20);

    list.display(); // Expected: 10 -> 20 -> 30 -> 40 -> 20 -> (back to head)
    cout << "Total nodes: " << list.countNodes() << endl;

    list.removeDuplicate();
    list.display(); // Expected: 10 -> 20 -> 30 -> 40 -> (back to head)

    list.removeHead();
    list.removeTail();
    list.display(); // Expected: 20 -> 30 -> (back to head)

    return 0;
}
